<Window x:Class="I2VISTools.Windows.RocksPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Свойства пород" Height="600" Width="800" MinWidth="600" MinHeight="400" Loaded="Window_Loaded" Icon="../Images/rocks.png" >
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        
        <Label Content="Свойства пород" FontSize="16" HorizontalContentAlignment="Center" />
        
        <DataGrid x:Name="RocksDataGrid" Grid.Row="1" PreviewKeyDown="RocksDataGrid_OnPreviewKeyDown" />
        
        <Button x:Name="ApplyRocksButton" Grid.Row="2" Height="30" Width="80" Content="Применить" Click="ApplyRocksButton_Click" />
        
    </Grid>
</Window>
