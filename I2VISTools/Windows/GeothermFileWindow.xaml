<Window x:Class="I2VISTools.Windows.GeothermFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Загрузить геотерму из файла" Height="367" Width="1180" Loaded="GeothermFileWindow_OnLoaded" >
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition/>
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Label Content="Кликните на рисунке на нужные места для профиля геотерм и нажмите &quot;Отобразить&quot;" HorizontalContentAlignment="Center" />
        
        <Image x:Name="TxtImage" Grid.Row="1" Cursor="Cross" MouseLeftButtonUp="TxtImage_OnMouseLeftButtonUp" />
        
        <Button x:Name="DisplayButton" Grid.Row="2" Height="30" Width="80" Content="Отобразить" HorizontalAlignment="Right" Margin="10" Click="DisplayButton_Click" />
        
    </Grid>
</Window>
